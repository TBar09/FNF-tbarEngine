<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- _________________________ Application Settings _________________________ -->

	<app
		title="Friday Night Funkin': T-Bar Engine" file="TBarEngine"
		packageName="com.tbar.tbarengine" package="com.tbar.tbarengine"
		main="Main" version="0.2.0" company="TBarEngine"
	/>

	<!--Switch Export with Unique ApplicationID and Icon-->
	<set name="APP_ID" value="0x0100f6c013bbc000" />

	<!-- NOTE TO SELF: DISABLE THIS IF ISSUES ARE FOUND -->
	<haxedef name="LINC_LUA_RELATIVE_DYNAMIC_LIB"/> <!-- stable luas PUT AFTER FIRST LINE WITH APP NAME AND ETC -->

	<!--The flixel preloader is not accurate in Chrome. You can use it regularly if you embed the swf into a html file
		or you can set the actual size of your file manually at "FlxPreloaderBase-onUpdate-bytesTotal"-->
	<!-- <app preloader="Preloader" resizable="true" /> -->
	<app preloader="flixel.system.FlxPreloader" />

	<!--Minimum without FLX_NO_GAMEPAD: 11.8, without FLX_NO_NATIVE_CURSOR: 11.2-->
	<set name="SWF_VERSION" value="11.8" />

	<!-- ______________________ PSYCH ENGINE CUSTOMIZATION ______________________ -->

	<!-- Allows for modpack support. -->
	<define name="MODS_ALLOWED" if="desktop || android" unless="html5" />

	<!-- Allows for hscript support & access to the hscript-improved library. -->
	<define name="HSCRIPT_ALLOWED" />

	<!-- Allows for Lua script support & access to the linc_luaJIT library. -->
	<define name="LUA_ALLOWED" if="desktop || android" unless="hl || html5"/>

	<!-- Allows for achievements & achievement support. -->
	<define name="ACHIEVEMENTS_ALLOWED" />

	<!-- Allows for Discord RPC support & access to the hxdiscord_rpc library. -->
	<define name="DISCORD_ALLOWED" unless="hl || html5 || android"/>

	<!-- Allows for video playback support & access to the hxvlc library. -->
	<define name="VIDEOS_ALLOWED" if="windows || linux || android" unless="32bits || hl || html5"/>

	<!-- Adds the base FNF songs & assets. -->
	<define name="BASE_GAME_FILES" />

	<!-- Allows the fork to check for updates. Not recommended to use this in source mods. -->
	<define name="CHECK_FOR_UPDATES" />

	<!-- ______________________ T-BAR ENGINE CUSTOMIZATION ______________________ -->

	<!-- Allows for 3D support & access to the away3d library. -->
	<define name="AWAY3D_ALLOWED"/>

	<!-- Imports all away3d classes to expand Hscript compatibility with it. Increases compile time. -->
	<define name="IMPORT_AWAY3D" if="AWAY3D_ALLOWED"/>

	<!-- Adds haxe scripting support to the menus (need to enable HSCRIPT_ALLOWED). -->
	<define name="SOFTCODED_STATES" if="HSCRIPT_ALLOWED"/>

	<!-- Allows for creating custom classes using HScript. Increases compile time. -->
	<define name="CUSTOM_CLASSES" if="HSCRIPT_ALLOWED"/>

	<!-- Adds global scripts, which always run until their respective modpack is disabled. -->
	<define name="GLOBAL_SCRIPTS" if="HSCRIPT_ALLOWED"/>

	<!-- Allows for ".ndll" support. -->
	<define name="NDLL_ALLOWED" unless="hl || html5"/>

	<!-- 
		Adds the crash hander. To remove the crash handler completely, just comment this line out.
		"tbar" = new crash handler that doesn't close the game
		"psych" = original psych crash handler
	-->
	<define name="CRASH_HANDLER" value="tbar" if="desktop release" />

	<!-- 
		Turns on the title screen watermarks. To show the default FNF watermarks, just comment this line out.
		"tbar" = tbar engine credits will be shown
		"psych" = original psych credits will be shown
	-->
	<define name="WATERMARKS" value="tbar"/>

	<section if="officialBuild">
		<define name="TITLE_SCREEN_EASTER_EGG"/>
	</section>

	<!-- ____________________________ Window Settings ___________________________ -->

	<!--These window settings apply to all targets-->
	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" />

	<!--HTML5-specific-->
	<window if="html5" resizable="true" />

	<!--Desktop-specific-->
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false"/>

	<!--Switch-specific-->
	<window if="switch" orientation="landscape" fullscreen="true" width="0" height="0" resizable="true" />

	<!--Mobile-specific-->
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" resizable="false"/>

	<section if="android">
		<config:android gradle-version="7.4.2" gradle-plugin="7.3.1" />
	</section>

	<!-- _____________________________ Path Settings ____________________________ -->

	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />
	<set name="BUILD_DIR" value="export/32bit" if="32bits" />

	<classpath name="source" />

	<!-- __________________________ Game Assets & Etc. __________________________ -->

	<!-- Assets -->
	<assets path="assets/fonts" />
	<assets path="assets/shared"        exclude="*.ogg" if="web"/>
	<assets path="assets/shared"        exclude="*.mp3" unless="web"/>
	<assets path="assets/videos"        library="videos"        if="VIDEOS_ALLOWED"/>
	<assets path="assets/songs"         library="songs"         exclude="*.ogg" if="web"/>
	<assets path="assets/songs"         library="songs"         exclude="*.mp3" unless="web"/>
	<section if="TITLE_SCREEN_EASTER_EGG">
		<assets path="assets/secrets" rename="assets/shared" exclude="*.ogg" if="web"/>
		<assets path="assets/secrets" rename="assets/shared" exclude="*.mp3"  unless="web"/>
	</section>
	<section if="BASE_GAME_FILES">
		<assets path="assets/base_game" rename="assets" exclude="*.ogg" if="web"/>
		<assets path="assets/base_game" rename="assets" exclude="*.mp3"  unless="web"/>
		<assets path="assets/base_game/songs" rename="assets/songs" library="songs" exclude="*.ogg" if="web"/>
		<assets path="assets/base_game/songs" rename="assets/songs" library="songs" exclude="*.mp3" unless="web"/>

		<assets path="assets/week_assets"   library="week_assets"   rename="assets" exclude="*.ogg" if="web"/>
		<assets path="assets/week_assets"   library="week_assets"   rename="assets" exclude="*.mp3" unless="web"/>
		<library name="week_assets"   preload="true" />
	</section>

	<library name="videos"        preload="true" if="VIDEOS_ALLOWED"/>
	<library name="songs"         preload="true" />

	<!-- OpenAL config -->
	<section if="desktop">
		<assets path="alsoft.txt" rename="plugins/alsoft.ini" type="text" if="windows"/>
		<assets path="alsoft.txt" rename="plugins/alsoft.conf" type="text" unless="windows"/>
	</section>

	<section if="MODS_ALLOWED">
		<assets path='example_mods' rename='mods' embed='false'/>
	</section>
	<assets path='art/readme.txt' rename='do NOT readme.txt' />

	<!-- _______________________________ Libraries ______________________________ -->
	
	<!--
	<haxelib name="openfl" version="9.3.2" />
	<haxelib name="lime" version="8.0.1" />
	<haxelib name="flixel" version="5.5.0"/>
	-->

	<haxelib name="flixel" version="5.5.0"/>
	<haxelib name="flixel-addons" version="3.2.1" />
	<haxelib name="flixel-ui" />
	<haxelib name="tjson" />

	<!--Psych stuff needed-->
	<haxelib name="linc_luajit" if="LUA_ALLOWED"/>
	<haxelib name="flxanimate"/>
	
	<haxelib name="hxvlc" if="VIDEOS_ALLOWED"/>
	<haxelib name="hxdiscord_rpc" if="DISCORD_ALLOWED"/>

	<haxelib name="away3d" if="AWAY3D_ALLOWED"/>
	<haxelib name="hscript-improved-dev" if="HSCRIPT_ALLOWED"/>
	<define name="hscriptPos" />

	<!-- Disable Discord IO Thread -->
	<haxedef name="DISCORD_DISABLE_IO_THREAD" if="hxdiscord_rpc" />
	<haxedef name="NO_PRECOMPILED_HEADERS" if="linux" />

	<!-- Enables a terminal log prompt on debug builds -->
	<haxelib name="hxcpp-debug-server" if="debug"/>

	<haxedef name="HXC_LIBVLC_LOGGING" if="VIDEOS_ALLOWED debug" />
	<haxedef name="HXVLC_NO_SHARE_DIRECTORY" if="VIDEOS_ALLOWED" />
	
	<!-- ______________________________ Haxedefines _____________________________ -->

	<!--Enable the Flixel core recording system-->
	<!--<haxedef name="FLX_RECORD" />-->

	<!--Disable the right and middle mouse buttons-->
	<!-- <haxedef name="FLX_NO_MOUSE_ADVANCED" /> -->

	<!--Disable the native cursor API on Flash-->
	<!--<haxedef name="FLX_NO_NATIVE_CURSOR" />-->

	<!--Optimise inputs, be careful you will get null errors if you don't use conditionals in your game-->
	<!-- <haxedef name="FLX_NO_MOUSE" if="mobile" /> -->
	<!-- <haxedef name="FLX_NO_KEYBOARD" if="mobile" /> -->
	<!-- <haxedef name="FLX_NO_TOUCH" if="desktop" /> -->
	<!--<haxedef name="FLX_NO_GAMEPAD" />-->

	<!--Disable the Flixel core sound tray-->
	<!--<haxedef name="FLX_NO_SOUND_TRAY" />-->

	<!--Disable the Flixel sound management code-->
	<!--<haxedef name="FLX_NO_SOUND_SYSTEM" />-->

	<!--Disable the Flixel core focus lost screen-->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	
	<!--Disable the Flixel core debugger. Automatically gets set whenever you compile in release mode!-->
	<haxedef name="FLX_NO_DEBUG" unless="debug" />

	<!--Enable this for Nape release builds for a serious peformance improvement-->
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />

	<!--Used for Izzy Engine's crash handler-->
	<haxedef name="HXCPP_CHECK_POINTER" if="CRASH_HANDLER" />
	<haxedef name="HXCPP_STACK_LINE" if="CRASH_HANDLER" />
	<haxedef name="HXCPP_STACK_TRACE" if="CRASH_HANDLER" />

	<haxedef name="message.reporting" value="classic" />

	<!--Disable deprecated warnings-->
	<haxedef name='no-deprecation-warnings' />

	<!--Macro fixes-->
	<haxeflag name="--macro" value="allowPackage('flash')" />
	<haxeflag name="--macro" value="include('my.pack')" />
	<haxeflag name="--macro" value="backend.macros.MacroUtil.compileMacros()" />

	<!-- Might be used later -->
	<!--
	<prebuild haxe="source.backend.macros.Prebuild.hx"/>
    <postbuild haxe="source.backend.macros.Postbuild.hx"/>
	-->

	<!-- _________________________________ Custom _______________________________ -->

	<!--Place custom nodes like icons here (higher priority to override the HaxeFlixel icon)-->

	<assets path='art/iconOG.png' rename='icon.png' if="linux" />
	
	<icon path="art/iconOG.png" size='16'/>
	<icon path="art/iconOG.png" size='32'/>
	<icon path="art/iconOG.png" size='64'/>
	<icon path="art/iconOG.png" />
</project>
